<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <!-- THIS PROPERTY GROUP MUST COME FIRST -->
    <AssemblyName>Microsoft.SemanticKernel.Planning</AssemblyName>
    <RootNamespace>Microsoft.SemanticKernel.Planning</RootNamespace>
    <TargetFramework>netstandard2.0</TargetFramework>
  </PropertyGroup>

  <Import Project="$(RepoRoot)/dotnet/nuget/nuget-package.props" />
  <Import Project="$(RepoRoot)/dotnet/src/InternalUtilities/src/InternalUtilities.props" />

  <PropertyGroup>
    <!-- NuGet Package Settings -->
    <Title>Semantic Kernel - Planning</Title>
    <Description>Semantic Kernel Planning</Description>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="Stepwise\Skills\RenderFunctionManual\config.json" />
    <None Remove="Stepwise\Skills\RenderFunctionManual\skprompt.txt" />
    <None Remove="Stepwise\Skills\RenderQuestion\config.json" />
    <None Remove="Stepwise\Skills\RenderQuestion\skprompt.txt" />
    <None Remove="Stepwise\Skills\StepwiseStep\config.json" />
    <None Remove="Stepwise\Skills\StepwiseStep\skprompt.txt" />
    <None Remove="Sequential\skprompt.txt" />
  </ItemGroup>
  
  <ItemGroup>
    <ProjectReference Include="..\..\SemanticKernel.Abstractions\SemanticKernel.Abstractions.csproj" />
    <ProjectReference Include="..\..\SemanticKernel\SemanticKernel.csproj" />
    <ProjectReference Include="..\TemplateEngine.PromptTemplateEngine\TemplateEngine.PromptTemplateEngine.csproj" />
  </ItemGroup>
  
  <ItemGroup>
    <InternalsVisibleTo Include="IntegrationTests" />
    <InternalsVisibleTo Include="SemanticKernel.Extensions.UnitTests" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="Action\skprompt.txt">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </EmbeddedResource>
    <EmbeddedResource Include="Stepwise\Skills\RenderFunctionManual\config.json">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </EmbeddedResource>
    <EmbeddedResource Include="Stepwise\Skills\RenderFunctionManual\skprompt.txt">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </EmbeddedResource>
    <EmbeddedResource Include="Stepwise\Skills\RenderQuestion\config.json">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </EmbeddedResource>
    <EmbeddedResource Include="Stepwise\Skills\RenderQuestion\skprompt.txt">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </EmbeddedResource>
    <EmbeddedResource Include="Stepwise\Skills\StepwiseStep\config.json">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </EmbeddedResource>
    <EmbeddedResource Include="Stepwise\Skills\StepwiseStep\skprompt.txt">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </EmbeddedResource>
    <EmbeddedResource Include="Sequential\skprompt.txt">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </EmbeddedResource>
  </ItemGroup>

</Project>
