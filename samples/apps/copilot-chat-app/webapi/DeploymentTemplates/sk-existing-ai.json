      "type": "string",
      "defaultValue": "B1",
      "metadata": {
        "description": "SKU for the Azure App Service plan"
      }
    },
    "packageUri": {
      "type": "string",
      "defaultValue": "https://skaasdeploy.blob.core.windows.net/api/skaas.zip",
      "metadata": {
        "description": "Location of package to deploy as the web service"
      }
    },
    "aiService": {
      "type": "string",
      "defaultValue": "AzureOpenAI",
      "allowedValues": [
        "AzureOpenAI",
        "OpenAI"
